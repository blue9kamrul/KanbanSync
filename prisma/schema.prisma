model Board {
  id        String   @id @default(cuid())
  title     String
  userId    String 
  // The foreign key column. Stores the id of the User who owns this board. This is the actual column in the database.
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  // Defines the relation to the User model. fields: [userId] — the local foreign key column. references: [id] — the column in User it points to. onDelete: Cascade — if the User is deleted, all their Boards are automatically deleted too. Without this, deleting a user with boards would throw a foreign key violation error.
  columns   Column[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("boards")
}

model Column {
  id        String   @id @default(cuid())
  title     String
  order     Int      // To keep columns in the correct sequence
  boardId   String // Foreign key to the Board it belongs to
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  tasks     Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("columns")
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String? // optional field for task details
  status      TaskStatus // E.g., "TODO", "IN_PROGRESS", "DONE"
  order       Int      // For drag-and-drop sequencing
  columnId    String
  column      Column   @relation(fields: [columnId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tasks")
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

